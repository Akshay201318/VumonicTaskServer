<li id="post-<%= post._id%>">
    <p>
            <% if(locals.user && locals.user.id == post.user.id){%>
            <small>
                    <a class="delete-post-button" href="posts/destroy/<%=post._id%>">DeletePost</a>
            </small>
            <%}%>
            <%= post.content%>
            <%= post.user.email%>
    </p>
    <div id="add-comment">

            <% if(locals.user){%>
                    <form action="/comments/create" method="post" id="post-<%=post._id%>-comments-form">
                            <input id="comment-content" name= "content"  placeholder="Type here....">
                            <input type="hidden" name="post" value="<%= post._id%>">
                            <button type="submit" id="post">Add Comment</button>
                    </form>
            <%} %>

            <div class="post-comments">
                    <ul id="post-comment-<%= post._id%>">

                            <% for(comment of post.comment){%>
                                <%- include('_comments')-%>
                            <%}%>

                    </ul>

            </div>

    </div>
    
</li>