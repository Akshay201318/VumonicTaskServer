<link rel="stylesheet" href="/css/home.css">

<h1><%=title%></h1>

<!--Creating posts section-->

<div id="home-container">
        <section id="posts">
                <h4>Posts</h4>
                <% if(locals.user){%>
                <form id="new-post-form"action="/posts/create" method="post">
                        <textarea id="post-content" name= "content"cols="30" row="20" placeholder="Type here...."></textarea>
                        <button type="submit" id="post">Post</button>
                </form>
                <%} %>
        
                <div id="all-posts">
                
                        <ul>
                                <%for(post of posts){%>
        
                                        <%- include('_posts')-%>
                                        <%}%>
                        </ul>
        
                </div>
        </section>
        
        <section id="user-friends">
                <h4>Friends</h4>
        
                <% for(u of all_users){%>
        
                        <p>
                                <a href="/users/profile/<%= u.id %>"><%=u.name%></a>
                        </p>
        
                <%}%>
        
        </section>
</div>
<script src="/js/home.js"></script>
